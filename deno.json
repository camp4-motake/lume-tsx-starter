{
  "imports": {
    "@b-fuze/deno-dom": "jsr:@b-fuze/deno-dom@^0.1.56",
    "@mdn/browser-compat-data": "npm:@mdn/browser-compat-data@latest",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/path": "jsr:@std/path@^1.1.4",
    "adm-zip": "npm:adm-zip@^0.5.16",
    "clsx": "npm:clsx@^2.1.1",
    "es-toolkit": "npm:es-toolkit@^1.44.0",
    "lume/": "https://cdn.jsdelivr.net/gh/lumeland/lume@3.1.4/",
    "lume/jsx-runtime": "https://cdn.jsdelivr.net/gh/oscarotero/ssx@0.1.14/jsx-runtime.ts",
    "stylelint": "npm:stylelint@^17.1.0",
    "stylelint-config-recess-order": "npm:stylelint-config-recess-order@^7.6.0",
    "stylelint-config-recommended": "npm:stylelint-config-recommended@^18.0.0"
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "lume": {
      "description": "Run Lume command",
      "command": "deno run -P=lume lume/cli.ts"
    },
    "serve": {
      "description": "Run and serve the site for development",
      "command": "deno task lume -s"
    },
    "dev": {
      "description": "Run and serve the site for development",
      "command": "deno task lume -s"
    },
    "build": {
      "description": "Build the site for production",
      "command": "deno task lume"
    },
    "zip": {
      "description": "zip the site files",
      "command": "deno run --allow-read --allow-write --allow-run --allow-env plugins/zip.ts"
    },
    "lint": {
      "description": "Lint the site files",
      "command": "deno lint && deno run -A npm:stylelint './src/**/*.css'"
    },
    "format": {
      "description": "Format the site files",
      "command": "deno fmt && deno run -A npm:stylelint --fix './src/**/*.css'"
    }
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "lume"
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-window",
        "no-window-prefix",
        "no-import-prefix"
      ]
    },
    "plugins": [
      "https://cdn.jsdelivr.net/gh/lumeland/lume@3.1.4/lint.ts"
    ]
  },
  "fmt": {
    "lineWidth": 100,
    "exclude": [
      "./_site",
      "./src/**/*.svg"
    ]
  },
  "unstable": [
    "temporal",
    "fmt-component"
  ],
  "lock": true,
  "permissions": {
    "lume": {
      "read": true,
      "write": [
        "./"
      ],
      "import": [
        "cdn.jsdelivr.net:443",
        "jsr.io:443",
        "deno.land:443",
        "esm.sh:443"
      ],
      "net": [
        "0.0.0.0",
        "cdn.jsdelivr.net:443",
        "data.jsdelivr.com:443",
        "jsr.io:443",
        "deno.land:443",
        "esm.sh:443",
        "registry.npmjs.org:443"
      ],
      "env": true,
      "run": true,
      "ffi": true,
      "sys": true
    }
  }
}
