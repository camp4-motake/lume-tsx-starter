{
  "imports": {
    "@b-fuze/deno-dom": "jsr:@b-fuze/deno-dom",
    "@std/crypto": "jsr:@std/crypto",
    "@std/path": "jsr:@std/path",
    "adm-zip": "npm:adm-zip",
    "clsx": "npm:clsx",
    "es-toolkit": "npm:es-toolkit",
    "lume/": "https://cdn.jsdelivr.net/gh/lumeland/lume@3.1.2/",
    "lume/jsx-runtime": "https://cdn.jsdelivr.net/gh/oscarotero/ssx@0.1.13/jsx-runtime.ts"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "serve": "deno task lume -s",
    "dev": "deno task lume -s",
    "build": "deno task lume",
    "zip": "deno run --allow-read --allow-write --allow-run --allow-env scripts/zip.ts"
  },
  "compilerOptions": {
    "types": ["lume/types.ts"],
    "jsx": "react-jsx",
    "jsxImportSource": "lume"
  },
  "lint": {
    "exclude": ["./_site"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-window", "no-window-prefix", "no-import-prefix"]
    },
    "plugins": ["https://cdn.jsdelivr.net/gh/lumeland/lume@3.1.2/lint.ts"]
  },
  "fmt": {
    "lineWidth": 100,
    "exclude": ["./_site"]
  },
  "unstable": ["temporal", "fmt-component"],
  "lock": false
}
