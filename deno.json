{
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.5.3/"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume && deno fmt _site/**/*.html --line-width 320 && deno run --allow-read --allow-write ./lib/cacheBuster.ts",
    "serve": "deno task lume -s",
    "zip": "deno run --allow-read --allow-write --allow-run lib/zip.ts"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "npm:react",
    "jsxImportSourceTypes": "npm:@types/react"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100
  }
}
