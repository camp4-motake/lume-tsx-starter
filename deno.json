{
  "imports": {
    "lume/": "https://deno.land/x/lume@v3.0.0/",
    "lume/jsx-runtime": "https://deno.land/x/ssx@v0.1.9/jsx-runtime.ts"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "serve": "deno task lume -s",
    "dev": "deno task lume -s",
    "build": "deno task lume && deno fmt _site/**/*.html --no-config --line-width 320",
    "zip": "deno run --allow-read --allow-write --allow-run scripts/zip.ts"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "lume"
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    },
    "plugins": [
      "https://deno.land/x/lume@v3.0.0/lint.ts"
    ]
  },
  "fmt": {
    "lineWidth": 100,
    "exclude": [
      "./_site"
    ]
  },
  "unstable": [
    "temporal"
  ]
}
